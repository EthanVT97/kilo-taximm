# Application Config
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=yangon_kilo_taxi
DATABASE_URL=postgresql://postgres:password@localhost:5432/yangon_kilo_taxi

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration (Optional - for pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Supabase Configuration (Alternative to Redis)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Logging
LOG_LEVEL=info

# Backup Configuration
BACKUP_DIR=/tmp/backups
POSTGRES_BACKUP_USER=postgres

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Emergency Alert Configuration
EMERGENCY_RADIUS_KM=5
ADMIN_EMERGENCY_NOTIFICATIONS=true
